<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pi4.NewCategoryItemPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Titel" />
            <Entry Placeholder="Link" />
            <Entry Placeholder="Beschijving" />
            <Editor AutoSize="TextChanges" Placeholder="Content" />
        </StackLayout>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="DeleteToolbarItem" Text="Verwijderen" Icon="delete.svg"></ToolbarItem>
        <ToolbarItem x:Name="SaveToolbarItem" Text="Opslaan" Icon="done.png"></ToolbarItem>
    </ContentPage.ToolbarItems>
</ContentPage>